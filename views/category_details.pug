extends layout 

block content 
 h1= category.name 
 p= category.description
 if category.image.data 
  img(src= `data:${category.image.contentType};base64,${category.image.data}`, alt=category.name)
 ul 
  each item in categoryItems 
   li 
    a(href= item.url) #{item.name}
 a(href= category.url + "/delete") Delete
 a(href= category.url + "/update") Update
