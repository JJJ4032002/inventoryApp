extends layout 

block content 
 h1= title
 form(action="", method="post", enctype="multipart/form-data")
  .formGroup 
    label(for= "name") Enter the Category 
    input(name = "name", id = "name", value = `${category === undefined ? "" : category.name}`, type = text, required) 
  .formGroup 
    label(for= "description") Enter the Description 
    textarea(cols="50", rows="5",name = "description", id = "description", required)= category === undefined ? "" : category.description
  .formGroup 
        label(for="categoryFile") Upload an Image 
        input(type="file", name="categoryFile",id = "categoryFile")
        p image file does not persist when page is reloaded due to some error
  button(button = "submit") Create Category
 if image
  img(src= `data:${image.contentType};base64,${image.data}`, alt="category Image") 
  p This is your saved Image

 if errors
    ul
      for error in errors
        li!= error.msg 